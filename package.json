{
  "name": "lambda-durable-functions",
  "version": "1.0.0",
  "description": "AWS Lambda Durable Function example with CDK deployment",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:cdk && npm run build:functions",
    "build:cdk": "cd cdk && npm run build",
    "build:functions": "npm run install:all",
    "deploy": "cd cdk && cdk deploy",
    "deploy:order": "cd cdk && cdk deploy --context functions=order-processing",
    "deploy:dev": "cd cdk && cdk deploy --context stage=dev",
    "destroy": "cd cdk && cdk destroy",
    "test": "npm run test:cdk",
    "test:cdk": "cd cdk && npm test",
    "lint": "eslint . --ext .js,.ts,.mjs",
    "format": "prettier --write .",
    "synth": "cd cdk && cdk synth",
    "diff": "cd cdk && cdk diff",
    "install:order": "cd durable-order-processing && npm install"
  },
  "keywords": [
    "aws",
    "lambda",
    "durable-functions",
    "cdk",
    "serverless",
    "workflow"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
